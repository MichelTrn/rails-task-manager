<h1><%=@task.title%></h1>

<p class = "p-5 border bg-light"><%= @task.details %></p>

<%if @task.completed == true %>
  <p><i class="fa-regular fa-square-check"></i> This tasks is completed</p>
<%else %>

  <p><i class="fa-regular fa-square"></i> This tasks is not completed</p>
<%end%>

<%= link_to "Edit this task", edit_task_path, class: 'm-3 btn btn-primary'%>

<%= link_to "Back to the List", tasks_path, class: 'm-3 btn btn-primary'%>
